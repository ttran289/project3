<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<h1>Badges can be earn through these spots</h1>
<table>
  <thead>
    <tr>
      <th>Photo</th>
      <th>Caption</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |p| %>
      <tr>
        <td><%= image_tag p.image(:medium) %></td>
        <td><%= p.caption %></td>
        <td><%= p.date%></td>
        <td><label>Lat:</label><%= p.latitude%></td>
        <td><label>Long:</label><%= p.longitude%></td>
        <td><%= link_to 'Delete',p, method: :delete%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div id="map-canvas"></div>



<script type="text/javascript">

    handler = Gmaps.build('Google');

    handler.buildMap ({ provider: {zoom: 16, provider_key: "AIzaSyDJJPOQH24cT6ETa9IZacS7NENpUt2MKzA"}, internal: {id: 'map-canvas'}}, function(){
    <% @pictures.each do |p|%>
    markers = handler.addMarkers([
    
    {lat: <%=p.latitude%>,
    lng: <%=p.longitude%>,
    infowindow: "<%=p.caption%>",
	
	},
    
  ]);
    <%end%>
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();



});

</script>