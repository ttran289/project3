<div class = "showpic">

<h1>Listing pictures</h1>

<table>

  <tbody>
    <% @pictures.each do |p| %>
      <tr>
        <td><%= p.photo %></td>
        <td><%= p.caption %></td>
        <td><%= p.tags %></td>
        <td><%= p.likes %></td>
        <td><%= link_to 'Show', p %></td>
        <td><%= link_to 'Edit', edit_post_path(p) %></td>
        <td><%= link_to 'Destroy', p, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Picture', new_picture_path %>
</div>