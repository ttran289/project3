    <% @badges.each do |b|%>
    <div class="large-3 columns small-6 columns">
        <div class="panel">
            <%= image_tag "badges/" + b.url%>
            <%= b.name%>
            <%= form_for @picture do |f| %>
              <%= f.hidden_field :badge_id ,value: b.id.to_s %>
              <%= f.file_field :image %>
            <%= f.submit%>
          <% end %> 
      
      </div>
    </div>
    <%end%>
  </div>
 
